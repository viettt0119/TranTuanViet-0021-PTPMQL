@model ProjectMVC.Models.Student

@{
    ViewBag.Title = "Quản lý sinh viên";
}

<h2>Thông tin Sinh viên</h2>

@using (Html.BeginForm("Index", "Student", FormMethod.Post))
{
    <div class="form-group">
        <label>Mã Sinh viên:</label>
        @Html.TextBoxFor(m => m.StudentCode, new { @class = "form-control", placeholder = "Nhập mã SV..." })
    </div>

    <div class="form-group" style="margin-top:10px;">
        <label>Họ và Tên:</label>
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nhập họ tên..." })
    </div>

    <div style="margin-top:15px;">
        <button type="submit" class="btn btn-primary">Gửi thông tin</button>
    </div>
}

<hr />

@if (ViewBag.ThongBao != null)
{
    <div class="alert alert-success" style="color: green; font-weight: bold;">
        @ViewBag.ThongBao
    </div>
}